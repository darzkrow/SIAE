# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Django Core Settings
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-get_random_secret_key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@host:5432/database_name
# For SQLite (development - default):
# DATABASE_URL=sqlite:///db.sqlite3

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Email Configuration (for stock alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@gsih.com
STOCK_ALERT_EMAILS=admin@gsih.com,manager@gsih.com

# Production Settings (uncomment for production)
# DJANGO_PRODUCTION=True
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Docker Settings (for docker-compose)
DB_NAME=gsih_inventario
DB_USER=gsih_user
DB_PASSWORD=change-this-in-production
POSTGRES_DB=gsih_inventario
POSTGRES_USER=gsih_user
POSTGRES_PASSWORD=change-this-in-production

# Frontend Settings
VITE_API_URL=http://localhost:8000
NODE_ENV=development
