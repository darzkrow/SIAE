FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Instalar dependencias del sistema y crear usuario no-root
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       build-essential \
       gcc \
       libpq-dev \
       libffi-dev \
       curl \
       ca-certificates \
       gnupg \
    && rm -rf /var/lib/apt/lists/* \
    && useradd --create-home appuser

# Instalar Rust toolchain (requerido por algunas dependencias de Python)
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"


# Copiar solo los archivos necesarios para instalar dependencias
COPY requirements.txt .

# Actualizar pip e instalar requerimientos
RUN python -m pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Copiar el resto de la aplicaci贸n
COPY . .

# Establecer permisos
RUN chown -R appuser:appuser /app
RUN chmod +x /app/entrypoint.sh

# Cambiar al usuario no-root
USER appuser

# Punto de entrada para ejecutar tareas de inicializaci贸n
ENTRYPOINT ["/app/entrypoint.sh"]

# Comando por defecto para correr la aplicaci贸n con Gunicorn
CMD ["gunicorn", "config.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "3", "--threads", "4", "--log-level", "info"]

